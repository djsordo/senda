{
  "hosting": [
    {"site": "sendaestadisticas-com-desa",
     "public" : "www",
     "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en/**",
        "destination": "/en/index.html"
      }, 
      {
        "source": "/es/**", 
        "destination" : "/es/index.html"
      }
    ],
    "i18n": {
      "root" : "/"
    }
    },
    {"site": "sendaestadisticas-com-prod",
     "public" : "www",
     "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
    },
    {"site": "sendaestadisticas-com-apk",
     "public" : "android/app/release",
     "ignore" : [
      "output-metadata.json"
     ], 
     "rewrites": [
      {
        "source" : "**", 
        "destination" : "/senda.apk"
      }
     ]
    }
  ]
}
